# Database connection
MONGO_URI=mongodb+srv://your_mongo_uri

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret
JWT_REFRESH_KEY=your_jwt_refresh_key

# Frontend URL
FE_URL=https://pickup-basketball.vercel.app

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://pickup-basketball-api.onrender.com/auth/google/callback

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SendGrid (if used for emails)
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_SENDER=your_sender_email

# Server port
PORT=10000

# For testing
MONGO_URI_TEST=mongodb+srv://your_test_mongo_uri
